import os
from Bio import SeqIO

DATA_DIR = '/content/drive/MyDrive/TP53_Project/data/raw/'
OUTPUT_DIR = '/content/drive/MyDrive/TP53_Project/data/processed/'

input_files = [
    DATA_DIR + 'human_tp53.fasta',
    DATA_DIR + 'asian_tp53_hits.fasta',
    DATA_DIR + 'african_tp53_hits.fasta'
]

combined_file = OUTPUT_DIR + 'TP53_all_sequences.fasta'

with open(combined_file, 'w') as outfile:
    for fname in input_files:
        for record in SeqIO.parse(fname, "fasta"):
            SeqIO.write(record, outfile, "fasta")

print("Combined FASTA created:", combined_file)

